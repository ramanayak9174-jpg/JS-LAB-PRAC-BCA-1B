<!DOCTYPE html>
<html>
<body>
    <div id="area" style="width:200px; height:100px; background:lightgray; padding:20px;">
        Hover or Click me!
    </div>
    <br>
    <input type="text" id="keyInput" placeholder="Type something here">

    <script>
        const area = document.getElementById("area");
        const input = document.getElementById("keyInput");

        // Mouse Event
        area.addEventListener("mouseover", () => area.style.background = "lightgreen");
        area.addEventListener("mouseout", () => area.style.background = "lightgray");

        // Keyboard Event
        input.addEventListener("keydown", (event) => {
            console.log("Key pressed: " + event.key);
        });
    </script>
</body>
</html>
